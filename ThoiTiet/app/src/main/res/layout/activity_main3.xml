<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0000"
    android:orientation="vertical"

    tools:context="com.example.uongvancong.thoitiet.Main3Activity">
    <LinearLayout
        android:id="@+id/nd_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/partly_cloudy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Weather App"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Nam Định"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07/06/2016"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="4:23 PM"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_rain"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/rain" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_temp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/temperature"
            />
        <TextView
            android:id="@+id/tv_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35oC"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_toRightOf="@id/img_temp"
            />
        <ImageView
            android:id="@+id/img_windy"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/windy"
            android:layout_toRightOf="@id/tv_temp"
            android:layout_marginLeft="50dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="125 mph"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_toRightOf="@id/img_windy"
            />
        <ImageView
            android:id="@+id/img_rain_drop"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/img_temp"
            android:src="@drawable/rain_drop"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tv_raindrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="70%"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_toRightOf="@id/img_rain_drop"
            android:layout_below="@id/img_temp"
            android:layout_marginTop="20dp"
            />
        <ImageView
            android:id="@+id/img_sunrise"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/sunrise"
            android:layout_below="@id/img_windy"
            android:layout_toRightOf="@id/tv_raindrop"
            android:layout_marginLeft="65dp"

            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6:23 PM"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:layout_toRightOf="@id/img_sunrise"
            android:layout_below="@id/img_windy"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id="@+id/img_sundown"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/img_sunrise"
            android:src="@drawable/sundown"
            android:layout_toRightOf="@id/tv_raindrop"
            android:layout_marginLeft="65dp"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5:30 AM"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:layout_toRightOf="@id/img_sundown"
            android:layout_below="@id/img_sunrise"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            >
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/sun"

                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08/06"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            >
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/partly_cloudy"

                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09/06"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView

                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/rain"

                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/06"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/hail"

                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11/06"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
